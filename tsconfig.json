{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "TSConfig for config-loader",
  "extends": "@meltstudio/tsconfig/node18.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "noEmit": false,
    "noUncheckedIndexedAccess": false,
    "outDir": "./dist",
    "paths": {
      "@/nodes/*": ["src/nodes/*"],
      "@/option": ["src/option"],
      "@/option/*": ["src/option/*"],
      "@/src": ["src"],
      "@/types": ["src/types"]
    }
  },
  "include": ["src", "tests", "example"]
}
