{
  "name": "@meltstudio/config-loader",
  "version": "3.5.0",
  "description": "Type-safe configuration loader with full TypeScript inference. Load from YAML, JSON, .env, environment variables, and CLI args.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": "https://github.com/MeltStudio/config-loader",
  "author": "MeltStudio <dev@meltstudio.co>",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "configuration",
    "config",
    "yaml",
    "json",
    "loader",
    "env",
    "environment",
    "dotenv",
    "cli",
    "type-safe",
    "typescript",
    "schema",
    "validation",
    "zod",
    "settings"
  ],
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "rimraf ./dist && tsup src/index.ts --dts --config tsconfig.build.json",
    "lint": "eslint --max-warnings=0 --fix .",
    "type-check": "tsc --noEmit",
    "test": "jest --verbose",
    "replace-tspaths": "./scripts/replace-tspaths/index.mjs",
    "example:run": "ts-node -r tsconfig-paths/register ./example/index.ts",
    "prepare": "husky",
    "docs:build": "docusaurus build && node scripts/fix-llms-urls.mjs",
    "docs:serve": "docusaurus serve",
    "docs:start": "docusaurus start"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "js-yaml": "^4.1.0",
    "js-yaml-source-map": "^0.2.2",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@docusaurus/core": "^3.7.0",
    "@docusaurus/preset-classic": "^3.7.0",
    "@eslint/js": "^10.0.0",
    "@mdx-js/react": "^3.0.0",
    "@meltstudio/tsconfig": "^2.0.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.6",
    "@semantic-release/npm": "^13",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^22.0.0",
    "docusaurus-plugin-llms": "^0.3.0",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-jest": "^29.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.0.0",
    "jest": "^30.0.0",
    "jest-html-reporters": "^3.1.4",
    "lint-staged": "^16.0.0",
    "prettier": "^3.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rimraf": "^6.1.3",
    "semantic-release": "^25",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.4",
    "typescript-eslint": "^8.24.0",
    "zod": "^4.3.6"
  }
}
